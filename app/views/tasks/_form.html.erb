<%= form_for @task, remote: true do |f| %>
  <div class="form-group">
    <%= f.text_area :description, placeholder: "What Needs to Be Done?", cass: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :deadline, id: "datetimepicker1", placeholder: "When is it due?", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
